<div class="page-width" data-section-id="{{ section.id }}" data-section-type="register">
  <div class="grid">
    <div class="grid__item medium-up--one-half medium-up--push-one-quarter">
      <div class="form-message form-message--error hide" id="RegisterError">
        {{ form.errors | default_errors }}
      </div>

      <div class="form-vertical">
        {% form 'create_customer' %}
          <h1>{{ 'customer.register.title' | t }}</h1>

          <label for="FirstName">{{ 'customer.register.first_name' | t }}</label>
          <input type="text"
            name="customer[first_name]"
            id="FirstName"
            class="input-full{% if form.errors contains 'first_name' %} input--error{% endif %}"
            {% if form.first_name %}value="{{ form.first_name }}"{% endif %}
            autocomplete="given-name">

          <label for="LastName">{{ 'customer.register.last_name' | t }}</label>
          <input type="text"
            name="customer[last_name]"
            id="LastName"
            class="input-full{% if form.errors contains 'last_name' %} input--error{% endif %}"
            {% if form.last_name %}value="{{ form.last_name }}"{% endif %}
            autocomplete="family-name">

          <label for="Email">{{ 'customer.register.email' | t }}</label>
          <input type="email"
            name="customer[email]"
            id="Email"
            class="input-full{% if form.errors contains 'email' %} input--error{% endif %}"
            {% if form.email %} value="{{ form.email }}"{% endif %}
            autocapitalize="off"
            autocomplete="email">

          <label for="CreatePassword">{{ 'customer.register.password' | t }}</label>
          <input type="password"
            name="customer[password]"
            id="CreatePassword"
            class="input-full{% if form.errors contains 'password' %} input--error{% endif %}"
            autocomplete="new-password">

          <p>
            <input type="submit" value="{{ 'customer.register.submit' | t }}" class="btn">
          </p>
          <a href="{{ routes.account_login_url }}">{{ 'customer.register.log_in' | t }}</a>

        {% endform %}
      </div>
    </div>
  </div>

  {% for block in section.blocks %}
    {% case block.type %}
      {% when '@app' %}
        {% render block %}
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
{
  "name": {
    "en": "Register"
  },
  "settings": [],
  "blocks": [
    {
      "type": "@app"
    }
  ]
}
{% endschema %} 